<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
  
  <!-- File included -->
  <xacro:include filename="inertial_macros.xacro"/>
  
  <!-- Define material -->
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  
  <material name="orange">
    <color rgba="1 0.3 0.1 1"/>
  </material>

  <material name="blue">
    <color rgba="0.2 0.2 1 1"/>
  </material>
  
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <!-- BASE -->
  <link name="base_link"></link>

  <!-- CHASSIS -->
  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="-0.09 0 0"/>
  </joint>

  <link name="chassis" type="fixed">
    <visual>
      <origin xyz="0.09 0 0.09"/>
      <geometry>
        <box size="0.18 0.18 0.18"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0.09 0 0.09"/>
      <geometry>
        <box size="0.18 0.18 0.18"/>
      </geometry>
    </collision>
    <xacro:inertial_cube mass="1.5" x="0.18" y="0.18" z="0.18">
      <origin xyz="0.09 0 0.09" rpy="0 0 0"/>
    </xacro:inertial_cube>
  </link>

  <!-- WHEELS -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.11 0" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.0325" length="0.027"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0325" length="0.027"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.115" radius="0.0325" length="0.027">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.11 0" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>
  
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.0325" length="0.027"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0325" length="0.027"/>
      </geometry>
    </collision> 
    <xacro:inertial_cylinder mass="0.115" radius="0.0325" length="0.027">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <joint name="caster_wheel_joint" type="fixed">
    <parent link="chassis"/>
    <child link="caster_wheel"/>
    <origin xyz="0.15 0 0"/>
  </joint>

  <link name="caster_wheel">
    <visual>
      <geometry>
        <sphere radius="0.032"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.032"/>
      </geometry>
    </collision>
    <xacro:inertial_sphere mass="0.032" radius="0.032">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere>
  </link>

</robot>
